    "next": "^16.0.1",
    "next-auth": "^4.24.13",
    "next-pwa": "^5.6.0",
    "prettier": "^3.6.2",
    "prisma": "^6.18.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sucrase": "^3.35.0",
    "typescript": "^5.9.3",
    "web-push": "^3.6.7"
